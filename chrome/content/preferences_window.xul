							<menuitem label="&prefwindow.JSON_DataView.menuitem.syntax_highlighter.theme.default;" value="default"/>
							<menuitem label="&prefwindow.JSON_DataView.menuitem.syntax_highlighter.theme.docco;" value="docco"/>
